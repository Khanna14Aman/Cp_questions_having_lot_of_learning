question====>https://www.codechef.com/problems/RECHEND




#include<bits/stdc++.h>
#define int long long
using namespace std;
signed main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        vector<pair<int,int>>v(n);
        for(int i=0;i<n;i++){
            cin>>v[i].first>>v[i].second;
        }
        sort(v.begin(),v.end());
        int left=-1;
        for(int i=1;i<n;i++){
            if(v[i].second==v[i-1].second-1)left=i;
            else break;
        }
        int right=-1;
        for(int i=n-2;i>=0;i--){
            if(v[i+1].second+1==v[i].second)right=i;
            else break;
        }
        
        if(v[left].second==1 || v[right].second==n){
            cout<<"NO\n";
        }
        else{
            cout<<"YES\n";
        }
    }
    return 0;
}
