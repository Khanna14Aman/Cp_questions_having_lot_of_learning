#include<bits/stdc++.h>
#include <iostream>
#define int long long 
using namespace std;

void solve(){
    int n;
    cin>>n;
    vector<int>a(n);
    vector<int>b(n);
    for(int i=0;i<n;i++){
        cin>>a[i];
        
    }
    for(int i=0;i<n;i++){
        cin>>b[i];
    }
    //very important portion
    int aa=0,bb=0;
    for(int i=0;i<n;i++){
        aa += (a[i]*i);
        bb += (b[i]*i);
    }  
    ////
    int ans = bb-aa;
    cout<<ans<<"\n";
}

signed main() {
    int t ;
    cin>>t;
    while(t--){
        solve();
    }
	// your code goes here
	return 0;
}
