question==>https://codeforces.com/contest/1573/problem/B
solution==>https://codeforces.com/contest/1573/submission/129253911

#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int a[n+1],b[n+1],c[2*n+2],d[2*n+2];
        for(int i=1;i<=n;i++){
            cin>>a[i];
            c[a[i]]=i-1;
        }
        for(int i=1;i<=n;i++){
            cin>>b[i];
            d[b[i]]=i-1;
        }
        
        int ans = INT_MAX;
        int pos = ans;
        for(int i=1;i<=2*n;i++){
            if(i%2)pos = min(pos,c[i]);
            else ans = min(ans,d[i]+pos);
        }
        cout<<ans<<endl;
    }
    return 0;
}
