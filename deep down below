question==>https://codeforces.com/contest/1561/problem/C
#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n,i,j;
        cin>>n;
        vector<pair<int,int>> vp(n);
        int maxi=INT_MIN;
        for(i=0;i<n;i++){
            int k;
            cin>>k;
            maxi=0;
            vector<int>vk(k);
            for(j=0;j<k;j++){
                cin>>vk[j];
                maxi = max(maxi,vk[j]-j+1);
            }
            vp[i]={maxi,k};
        }
        
        sort(vp.begin(),vp.end());
        int sum=0;
        for(i=0;i<n-1;i++){
            if(vp[i].first+vp[i].second < vp[i+1].first){
                sum += vp[i+1].first-(vp[i].first+vp[i].second);
            }
            else{
                vp[i+1].first+=vp[i].first+vp[i].second-vp[i+1].first;
            }
        }
        cout<<vp[0].first+sum<<"\n";
    }
    return 0;
}
