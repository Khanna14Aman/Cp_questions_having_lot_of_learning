question==>https://www.codechef.com/problems/MAXDISTKT




#include<bits/stdc++.h>
#define int long long 
using namespace std;
signed main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        vector<pair<int,int>>v(n);
        for(int i=0;i<n;i++){
            int x;
            cin>>x;
            v.push_back({x,i});
        }
        int a[n];                
        sort(v.begin(),v.end());        // if value of b[i] is m then maximum value of remainder we can have is [0,1,.............b[i]-1]
        int want=0;                     // trying to generate maximum remainder by updating want for remainder eg 1,2,3 we can achieve answer by arranging them in ascending order not in desceding order
        for(auto it:v){
            if(want<=it.first-1){
                a[it.second]=want;
                want++;
            }
            else{
                a[it.second]=0;
            }
        }
        for(int i=0;i<n;i++){
            cout<<a[i]<<" ";
        }
        cout<<endl;
    }
    return 0;
}
