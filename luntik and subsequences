question==>https://codeforces.com/contest/1582/problem/B



#include<bits/stdc++.h>
#define int long long 
using namespace std;




signed main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int a[n];
        int count0=0,count1=0;
        for(int i=0;i<n;i++){
            cin>>a[i];
            if(a[i]==0){
                count0++;
            }
            if(a[i]==1){
                count1++;
            }
        }
        
         cout<<(1LL<<count0)*count1<<endl;
    }
    return 0;
}
